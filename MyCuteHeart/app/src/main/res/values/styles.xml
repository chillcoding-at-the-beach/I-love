<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyText.Title">
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="MyText.SubTitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="MyCardText">
        <item name="android:layout_marginLeft">@dimen/cards_middle_margin</item>
        <item name="android:layout_marginRight">@dimen/cards_middle_margin</item>
    </style>

    <style name="MyCardText.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">@dimen/cards_big_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="MyCardText.Subtitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/cards_inter_margin</item>
        <item name="android:textSize">@dimen/body_size</item>
    </style>

    <style name="MyCardText.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/cards_middle_margin</item>
        <item name="android:textSize">@dimen/body_size</item>
        <item name="android:textColor">#87000000</item>
    </style>

    <style name="MyCard">
        <item name="android:layout_marginTop">@dimen/cards_margin</item>
        <item name="android:layout_marginLeft">@dimen/cards_margin</item>
        <item name="android:layout_marginRight">@dimen/cards_margin</item>
        <item name="android:layout_marginBottom">@dimen/cards_big_margin</item>
    </style>
</resources>
